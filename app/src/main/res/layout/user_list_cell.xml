<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/userListImageViewId"
        android:layout_width="100dp"

        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:contentDescription="@string/imageuser"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_default_user" />


    <TextView
        android:id="@+id/userListTextViewUsernameId"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/userListImageViewId"
        tools:text="username" />

    <TextView
        android:id="@+id/userListTextViewInfoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userListTextViewUsernameId"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/userListImageViewId"
        tools:text="info" />

</RelativeLayout>